
@model TaskManagementSystem.Models.ViewModels.EmployeeLogin



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index1</title>
</head>
<body>

    <h4>Login</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form  id="frmLogin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger">@Html.ValidationSummary()</div>
                <div class="form-group">
                    <label asp-for="User">User name/اسم المستخدم</label>
                    @Html.TextBoxFor(tb => tb.UserName, new {@class="form-control"})
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="Password">Password/كلمة المرور</label>
                    @Html.PasswordFor(tb => tb.Password, new { @class = "form-control" })
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <select id="ddlLang" onchange="$('#hdnLang').val($(this).val())">
                        <option value="en-US">English</option>
                        <option value="ar-JO">عربي</option>

                    </select>
                    <input type="text" id="hdnLang" value="en-US" name="hdnLang" />
                    @*<language-nav></language-nav>*@
                </div>

                <div class="form-group">
                    <input type="button" value="Login" class="btn btn-default" onclick="return submitFormLogin()" />
                </div>
            </form>
        </div>
    </div>



</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {

            var formAction = "@Url.Action("LoginPost","Login")"
            $("#frmLogin").attr("action", formAction)

        });
        function submitFormLogin() {


            $("#frmLogin").submit();

            return true

        }

    </script>
}